-if @post
  %h1 
    =@post.title
  %p
    =@post.content
  %hr
  %br
  .form-actions
    =link_to 'Publish', validations_new_path(:id=>@post.id), :class=>'btn'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_post_path(@post, :publish=>true), :class => 'btn'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), post_path(@post), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
-else
  %h1
    Post was not found!

